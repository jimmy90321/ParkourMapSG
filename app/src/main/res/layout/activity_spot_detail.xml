<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SpotDetailActivity">

    <TextView
            android:id="@+id/tv_spot_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:ellipsize="marquee"
            android:gravity="center"
            tools:text="Name"/>

    <TextView
            android:id="@+id/tv_spot_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_spot_detail_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            tools:text="test description a;wlekm ;lawkeu al;wekm ;lisuad l;kmwae l;ku lkmwae l;kuc al;kmwae l;u "/>

</android.support.constraint.ConstraintLayout>